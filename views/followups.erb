<%
gid = params[:gid]
g = BlackStack::Emails::Campaign.where(:id=>gid).first
timezone = @login.user.account.timezone
daychars = ['S', 'M', 'T', 'W', 'T', 'F', 'S']
daynames = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday']

q = "
    select 
        f.id, 
        f.name, 
        f.create_time,
        f.subject,
        f.type, -- 0 - plain text, 1 - html
        f.status,
        f.sequence_number,
        f.delay_days
    from eml_followup f
    where f.id_campaign='#{gid}'
    and f.delete_time is null
    order by f.sequence_number, f.create_time desc
"
%>

<!-- NavBar -->
<div class="mynavbar mysticky">
	<section class="row-fluid">	
		<div class="span6">
		    <%=nav4("Emails", "/emails", "Campaigns", "/emails/campaigns", g.name, "/emails/campaigns/#{g.id.to_guid}/edit", "FollowUps")%>
		</div>
		<div class="span6" style='text-align:right;'>
		    <a class='btn btn-blue' href='/emails/campaigns/<%=gid%>/followups/new'><i class='icon-plus'></i> New</a>
		</div>
	</section>
</div>

<!-- Single Panel -->
<section class="row-fluid">
	<div class="span12 box">
        <table class="table table-striped" style="table-layout: fixed; width: 100%;">
            <thead>
                <th style="width:120px;">Name</th>
                <th style="width:60px;">Creation</th>
                <th style="width:auto;">Subject</th>
                <th style="width:36px;">Type</th>
                <th style="width:36px;">Status</th>
                <th style="width:60px;text-align:right;">#<br/>Sequence</th>
                <th style="width:60px;text-align:right;">Delay<br/>Days</th>
                <th style="width:14px;"><!-- edit icon --></th>
                <th style="width:14px;"><!-- delete icon --></th>
            </thead>
            <tbody>
                <%
                i = 0
                DB[q].all do |row|
                    i += 1
                %>
                <tr>
                    <td class="fix" title="<%=row[:name].to_s.encode_html%>"><%=row[:name].to_s.encode_html%></td>
                    <td class="fix" title="<%=row[:create_time].to_s[0..9].encode_html%>"><%=row[:create_time].to_s[0..9].encode_html%></td>
                    <td class="fix">
                        <%
                        7.times do |i|
                            %>
                            <span class="label label-<%=row["schedule_day_#{i}".to_sym] ? 'blue' : 'gray'%>" title='<%=daynames[i]%>'><%=daychars[i]%></span>
                            <%
                        end
                        %>
                    </td>
                    <td class="fix">
                        <%
                        24.times do |i|
                            %>
                            <span class="label label-<%=row["schedule_hour_#{i}".to_sym] ? 'blue' : 'gray'%>" style='width:12px;text-align:center;'><%=i.to_s%></span>
                            <%
                            if i == 11
                                %>
                                <br/>
                                <%
                            end
                        end
                        %>
                    </td>
                    <td class="fix" style="text-align:right;"><a title='Delete' href='/emails/filter_delete_schedule?sid=<%=row[:id].to_guid%>'><i class='icon-trash'></i></a></td>
                </tr>
                <%
                end

                if i==0
                %>
                <tr>
                    <td colspan="11" class="fix" align='center' style='text-align:center;'>
                        No campaigns found.</br>
                        <a href='/emails/campaigns/<%=gid%>/followups/new'>Create a new followup here.</a>
                    </td>
                <tr>
                <%
                end
                %>
            </tbody>
        </table>
    </div>
</section>